.cover
	position relative
	
	&__img
		display block
		max-width 100%
		
	&__container
		position absolute
		top 0
		left 0
		display flex
		flex-flow column wrap
		justify-content center
		width 100%
		height 100%
		padding pxToRem(40px)
		background-color rgba(255,255,255,0.3)
		z-index 2
		
	&__title
		@extend .HindBold
		margin-bottom pxToRem(20px)
		font-size pxToRem(40px)
		
	&__description
		font-size pxToRem(22px)
		line-height pxToRem(28px)